<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
    <!--
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:id="@+id/listview"/>
     -->

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal"
        app:bnc_mode="spread">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:hapticFeedbackEnabled="true"
            app:bt_colorActive="@color/black"
            app:bt_colorInactive="@color/white"
            app:bt_icon="@drawable/activities_icon"
            app:bt_title="Activities" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/received"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:bt_colorActive="@color/black"
            app:bt_colorInactive="@color/white"
            app:bt_icon="@drawable/explore_icon"
            app:bt_title="Explore" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:bt_colorActive="@color/black"
            app:bt_colorInactive="@color/white"
            app:bt_icon="@drawable/settings_icon"
            app:bt_title="Settings" />

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

</RelativeLayout>